<%= turbo_frame_tag "app" do %>
<section>
  <div class="site-container">
    <% if user_signed_in? %> 
    <div> Welcome <%= current_user.username ? current_user.username : current_user.email %> </div> 
      <%= button_to "Sign out", destroy_user_session_path, method: :delete, data: {turbo_frame: '_top'} %> 
    <% else %>
      <%= button_to "Sign in", new_user_session_path %> 
    <% end %>
  </div>
</section>
<% end %>