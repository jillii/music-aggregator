<%= turbo_frame_tag 'app' do %>
<%= render 'shared/flash' %>
    <section id="users">
        <div class="site-container">
            <h1>Users</h1>
            <%= form_with url: users_path, method: :get do |form| %>
                <%= form.text_field :search %>
                <%= form.submit "Search" %>
            <% end %>
            <% if @users.present? %>
                <div class="users">
                    <% @users.each do |u| %>
                        <% playlists = u.playlists %>
                        <div class="user">
                            <% if u.username %>
                                <a class="user-username" href="/users/<%= u.id %>"><%= u.username %></a>
                            <% end %>
                            <% if playlists.length > 0 %>
                                <p class="user-playlists">Playlists: <%= playlists.length %></p>
                                <% pop_playlist = playlists.popular %>
                                <p class="user-popular-playlist.first">Popular playlist: <%= link_to pop_playlist.first.title, playlist_path(pop_playlist.first.id) %></p>
                            <% end %>
                        </div>
                    <% end %>
                    <%= paginate @users %>
                </div>
            <% end %>
        </div>
    </section>
<% end %>