<section>
  <div class="site-container">
    <% if @search || @track || @tag %>
      <h1>Search for: <%= @tag ? 'tag: ' : ''%><%= @track ? 'track: ' : '' %><%= @title.inspect %></h1>
    <% else %>
      <h1>Playlists</h1>
    <% end %>

    <%= form_with url: playlists_path, method: :get do |form| %>
      <%= form.text_field :search %>
      <%= form.submit "Search" %>
    <% end %>
    <% if @playlists.present? %>
      <div id="playlists" class="card-container">
        <% @playlists.each do |playlist| %>
          <%= render playlist %>
        <% end %>
      </div>
      <%= paginate @playlists %>
    <% else %>
      <p>Sorry, we couldn't find anything</p>
    <% end %>

  </div>
</section>