<%= turbo_frame_tag "app" do %>
<section>
    <div class="site-container">
        <h1>
            <% if @search %>
                Search: users: <%= @search %>
            <% else %>
                Users
            <% end %>
        </h1>
        <%= form_with url: search_users_path, method: :get do |form| %>
            <%= form.text_field :search %>
            <%= form.submit "Search" %>
        <% end %>
        <% if @users.present? %>
            <% @users.each do |user| %>
                <div class="user">
                    <p><%= user.username %></p>
                    <%= button_to "Add", add_editor_path, params: {user: user.id}, method: :put %>
                </div>
            <% end %>
        <% else %>
            <p>No users found.</p>
        <% end %>
    </div>
</section>
<% end %>